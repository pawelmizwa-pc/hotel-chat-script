{
  "name": "hotel-chat-worker",
  "version": "1.0.0",
  "description": "Hotel Smile Chat Agent Cloudflare Worker",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy", 
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "node scripts/test.js",
    "test:prod": "node scripts/test.js https://your-worker.your-subdomain.workers.dev",
    "install:clean": "rm -rf node_modules package-lock.json && npm install --legacy-peer-deps",
    "setup:local": "./scripts/setup-local.sh"
  },
  "npmConfig": {
    "legacy-peer-deps": true
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.78.0"
  },
  "dependencies": {
    "@langchain/core": "^0.2.31",
    "@langchain/openai": "^0.2.8",
    "langchain": "^0.2.18",
    "langfuse": "^3.22.0"
  }
} 